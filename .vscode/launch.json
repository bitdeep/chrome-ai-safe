{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "debug",
			"url": "https://news.ycombinator.com/",
			"runtimeArgs": ["--load-extension=${workspaceFolder}", "--ignore-certificate-errors", "--debug-brk", "--remote-debugging-port=9222"],
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"webpack:///./scripts/*": "${workspaceFolder}/scripts/*"
			}
		}
	]
}
